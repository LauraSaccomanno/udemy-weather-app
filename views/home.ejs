<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>

    <!-- Bootstrap CSS  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">   
        <form class="d-flex mr-sm-2" action="/" method="POST">
            <input class="form-control" type="text" placeholder="Enter a city" name="city">
            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>      
    </div>

    <% if(infoWeather) {
        console.log(infoWeather)
        function unixTimestampConverter (unixTimestamp) {
            let date = new Date(unixTimestamp * 1000);
            let result = date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            return result;
        };

        let sunrise = unixTimestampConverter(infoWeather.sys.sunrise);
        let sunset = unixTimestampConverter(infoWeather.sys.sunset); %>
        
        <div class="container">
            <div class="content">
                <div class="d-flex justify-content-between align-items-center">
                    <p><%=day%> | <%=month%> <%=dayOfMonth%></p>
                    <img src="http://openweathermap.org/img/wn/<%=infoWeather.weather[0].icon%>@2x.png">
                </div>
                
                <div class="d-flex flex-column align-items-center">                    
                    <h2><%=infoWeather.main.temp%>°</h2>
                    <p><%=infoWeather.weather[0].description%></p>
                    <div class="separator"></div>       
                </div>
            
                <p id="cityName"><i class="bi bi-geo-alt-fill"></i> <%=infoWeather.name%>, <%=infoWeather.sys.country%></p>

                <div class="d-flex justify-content-around">
                    <div>
                        <p class="p-line-height"><i class="bi bi-arrow-up"></i> <%=infoWeather.main.temp_max%>°C</p> 
                        <p class="p-line-height"><i class="bi bi-droplet"></i> <%=infoWeather.main.humidity%>%</p>
                        <p class="p-line-height"><i class="bi bi-sunrise"></i> <%=sunrise%></p>
                    </div>

                    <div>
                        <p class="p-line-height"><i class="bi bi-arrow-down"></i> <%=infoWeather.main.temp_min%>°C</p>
                        <p class="p-line-height"><i class="bi bi-wind"></i> <%=infoWeather.wind.speed%>km/h</p>
                        <p class="p-line-height"><i class="bi bi-sunset"></i> <%=sunset%></p>
                    </div>

                    
                </div>  

            </div>            
        </div>

    <%}%>


</body>
</html>